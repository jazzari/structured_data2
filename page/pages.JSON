<script type="application/ld+json">

{
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "WebPage",
      "name": "<%= @resource.title %>",
      "datePublished": "<%= @resource.publish_at %>",
      "dateModified": "<%= @resource.updated_at %>",
      "description": "<%= @resource.short_description %>",
      "breadcrumb": {
        "@id": "https://yoast.com/wordpress-seo/#breadcrumb"
      }
    },
  }
]
}

</script>